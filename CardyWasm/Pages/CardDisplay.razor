<MudPaper Outlined="true" Height="450px" Width="300px">
    <MudStack Row="true" Justify="Justify.SpaceBetween"> 
        <div>@card.Name</div>
        <MudStack Row="true">
            <div>@card.FollowerCost</div>
            <div>@card.PrayerCost</div>
        </MudStack>
    </MudStack>
    <MudPaper Outlined="true">
        <MudStack Style="height: 180px" Justify="Justify.Center" AlignItems="AlignItems.Center">
            Card Image
        </MudStack>
    </MudPaper>
    <MudPaper Outlined="true">
        <MudStack Style="height: 240px">
            @foreach (var ability in card.Abilities)
            {
                @ability
                <MudFlexBreak />
            }
            @foreach (var passive in card.PassiveEffects)
            {
                @passive
                <MudFlexBreak/>
            }
            @foreach (var active in card.ActivatedEffects)
            {
                @active
                <MudFlexBreak/>
            }
        </MudStack>
    </MudPaper>
    <MudPaper Outlined="true">
        <MudStack Row="true" Justify="Justify.SpaceBetween">
            <div>@card.Attack</div>
            <div>@card.GetBottomText()</div>
            <div>@card.Health</div>
        </MudStack>
    </MudPaper>
</MudPaper>

@code {
    [Parameter]    
    public Card card { get; set; }
}